<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BottomNavigationTextActive">
        <item name="android:textColor">@color/grey</item>
        <item name="android:iconTint">@color/grey</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>


    <style name="BottomNavigationTextInactive">
        <item name="android:textColor">@color/white</item>
        <item name="android:iconTint">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="NoScrollIndicatorsScrollView" parent="android:style/Widget.ScrollView">
        <item name="android:scrollbarThumbVertical">@null</item>
        <item name="android:scrollbarTrackVertical">@null</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="TransparentBottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">#88000000</item> <!-- 88 for 50% transparency -->
    </style>


</resources>