<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ic_location_not_found"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_minus45sdp"
            android:elevation="5dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fare_container"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location not found!"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:fontFamily="@font/poppins_bold"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_50sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check your initial location."
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center" />

            <Button
                android:id="@+id/locatioNotFoundBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:text="Go back"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/fragment_transit_button_boxs"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>