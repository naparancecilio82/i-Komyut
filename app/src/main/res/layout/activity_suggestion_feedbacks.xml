<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.SuggestionFeedbackActivity">


    <LinearLayout
        android:id="@+id/firstPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/close"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_15sdp"
            android:clickable="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text=" Your feedback \nmatter with us!"
                android:layout_gravity="center_horizontal"
                android:textSize="32sp"
                android:fontFamily="@font/poppins_extra_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="As much as we love i-Komyut, we would love \n     to have a room of improvement from you"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semi_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="Satisfaction"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semi_bold"
                android:layout_marginTop="@dimen/_10sdp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/feed1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/satisfaction1_unselect"/>
                <ImageView
                    android:id="@+id/feed2"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:src="@drawable/satisfaction2_unselect"/>
                <ImageView
                    android:id="@+id/feed3"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:src="@drawable/satisfaction3_unselect"/>
                <ImageView
                    android:id="@+id/feed4"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:src="@drawable/satisfaction4_unselect"/>
                <ImageView
                    android:id="@+id/feed5"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:src="@drawable/satisfaction5_unselect"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="Tell us what can be improved?"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semi_bold"
                android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/suggestionTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center_horizontal"
                android:lines="10"
                android:gravity="top"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/email_reqs_container"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/submitFeedBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/fragment_search_search_button"
                        android:text="Submit"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_gravity="bottom|center_horizontal"
                        />
                    <TextView
                        android:id="@+id/skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skip for now"
                        android:textColor="@color/grey"
                        android:layout_gravity="center_horizontal"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_50sdp"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <!--Second Page-->


</RelativeLayout>