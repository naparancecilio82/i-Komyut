<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/fare_container"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/blue"
                android:text="Are you sure you want to exit?"
                android:textSize="19sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/blue"
                android:text="Exiting in the application will remove the pinned search location"
                android:textSize="14sp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:textAlignment="center"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/exitYesBtn"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/fragment_transit_button_boxs"
                        android:text="Yes"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        />
                    <Button
                        android:id="@+id/exitCancelBtn"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/fragment_transit_button_boxs"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_20sdp"
                        />
                </LinearLayout>

            </FrameLayout>



        </LinearLayout>
    </FrameLayout>



</LinearLayout>