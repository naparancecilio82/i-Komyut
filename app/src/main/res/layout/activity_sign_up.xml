<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".User_Authentication_Registration.SignUpActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/eastBack2"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/ic_east_arrow"
                    android:rotation="180"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/_10sdp"/>
                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="@dimen/_20sdp"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please enter the following information to create an account"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="@dimen/_20sdp"
                    />

                <EditText
                    android:id="@+id/signupEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:ems="13"
                    android:background="@drawable/fragment_setting_textbox"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/ic_profile_blue"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/blue"
                    android:paddingStart="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="@dimen/_5sdp"
                    />

                <EditText
                    android:id="@+id/signupName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:ems="13"
                    android:background="@drawable/fragment_setting_textbox"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/ic_profile_blue"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/blue"
                    android:paddingStart="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact No."
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="@dimen/_5sdp"
                            />

                        <EditText
                            android:id="@+id/signupConNo"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:ems="30"
                            android:background="@drawable/fragment_setting_textbox"
                            android:inputType="number"
                            android:drawableStart="@drawable/ic_contact"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/blue"
                            android:paddingStart="@dimen/_5sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="@dimen/_5sdp"
                            />

                        <EditText
                            android:id="@+id/signupAge"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:ems="30"
                            android:background="@drawable/fragment_setting_textbox"
                            android:inputType="number"
                            android:drawableStart="@drawable/ic_age"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/blue"
                            android:paddingStart="@dimen/_5sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="@dimen/_5sdp"
                    />

                <EditText
                    android:id="@+id/signupAdd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:ems="30"
                    android:background="@drawable/fragment_setting_textbox"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_address"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/blue"
                    android:paddingStart="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="@dimen/_5sdp"
                    />
                <EditText
                    android:id="@+id/signupPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:ems="30"
                    android:background="@drawable/fragment_setting_textbox"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_key"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/blue"
                    android:paddingStart="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Re-enter password"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="@dimen/_5sdp"
                    />

                <EditText
                    android:id="@+id/signupConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:ems="30"
                    android:background="@drawable/fragment_setting_textbox"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_key"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/blue"
                    android:paddingStart="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    />
                <!--Ends-->


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/TermsConditionCbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I agree to the "
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="13sp"
                        android:textColor="@color/greyish"
                        android:buttonTint="@color/greyish"
                       />
                        <TextView
                            android:id="@+id/termsConditionRedirect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms and Conditions"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins_semi_bold"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/privacyPolicyCbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I agree to the "
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="13sp"
                            android:textColor="@color/greyish"
                            android:buttonTint="@color/greyish"
                            />
                        <TextView
                            android:id="@+id/privacyPolicyRedirect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Privacy Policy"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins_semi_bold"

                            />
                    </LinearLayout>

                    <Button
                        android:id="@+id/signupButton"
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:background="@drawable/fragment_setting_button"
                        android:text="Sign Up"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp">


                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have an account? "
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium"

                            />
                        <TextView
                            android:id="@+id/loginRedirectText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Log In"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/white"

                            />

                    </LinearLayout>


                </LinearLayout>
            </FrameLayout>
            </LinearLayout>
</RelativeLayout>