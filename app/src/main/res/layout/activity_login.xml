<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Authentication_Registration.LoginActivity">

    <LinearLayout
        android:id="@+id/loginForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
      >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/eastBack1"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/ic_east_arrow"
                android:rotation="180"
                android:clickable="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="@dimen/_80sdp"
                    />
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please log in to continue."
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="@dimen/_50sdp"
                    />


                    <EditText
                        android:id="@+id/loginEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:ems="30"
                        android:background="@drawable/fragment_setting_textbox"
                        android:drawableStart="@drawable/ic_profile_blue"
                        android:drawablePadding="@dimen/_5sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:inputType="textPersonName"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/grey"
                        android:fontFamily="@font/poppins_medium"
                        />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="@dimen/_10sdp"
                    />

                    <EditText
                        android:id="@+id/loginPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:ems="30"
                        android:background="@drawable/fragment_setting_textbox"
                        android:drawableStart="@drawable/ic_key"
                        android:drawablePadding="@dimen/_5sdp"
                        android:inputType="textPassword"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingStart="@dimen/_5sdp"
                        />
                    <TextView
                        android:id="@+id/forgetPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forget Password?"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/poppins_medium_italic"
                        android:textColor="@color/white"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_10sdp"
                        />
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/fragment_setting_button"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:text="Log In"
                        android:textColor="@color/blue"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:gravity="center"
                        />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                  android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an account? "
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/signupRedirectText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/white"
                        android:layout_alignEnd="@+id/text3"
                        android:layout_alignBaseline="@id/text3"

                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>