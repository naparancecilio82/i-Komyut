<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/successConstraintLayout"
    tools:ignore="MissingConstraints">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:id="@+id/layoutDialogue"
        android:background="@drawable/fare_container"
        android:layout_gravity="center"
        android:orientation="vertical">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:src="@drawable/rateus_dialog_design"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="Ratings Received!"
                    android:fontFamily="@font/poppins_extra_bold"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"
                    android:layout_marginTop="@dimen/_20sdp"
                   />
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="Thank you for your time. Your ratings \n              are highly appreciated."
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="11sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_50sdp"
                  />
                
                <Button
                    android:id="@+id/successDone"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/fragment_transit_button_boxs"
                    android:text="Close"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_20sdp"
                  />

    </LinearLayout>
    </FrameLayout>
</RelativeLayout>